        email = lnzmrr@gmail.com
        name = Lorenzo Murarotto

[difftool "vscode"]
        cmd = code --wait --diff $LOCAL $REMOTE
[difftool "nvimdiff"]
        cmd = nvim -d $LOCAL $REMOTE
[difftool "vimdiff"]
        cmd = vim -d $LOCAL $REMOTE

# https://blog.gitbutler.com/how-git-core-devs-configure-git

[column]
        ui = auto
[branch]
        sort = -committerdate
[tag]
        sort = version:refname
[init]
        defaultBranch = main
[diff]
        algorithm = histogram
        colorMoved = plain
        mnemonicPrefix = true
        renames = true
[push]
        default = simple
        autoSetupRemote = true
        followTags = true
[fetch]
        prune = true
        pruneTags = true
        all = true

[rebase]
        updateRefs = true
