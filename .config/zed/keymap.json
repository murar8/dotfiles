[
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-/": "workspace::NewCenterTerminal",
      "alt-g": ["task::Spawn", { "task_name": "lazygit" }],
      "alt-c": ["task::Spawn", { "task_name": "claude" }]
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "ctrl-s": "workspace::SaveAll", // default workspace::Save
      "ctrl-/": "workspace::NewCenterTerminal"
    }
  },
  {
    "context": "vim_operator == a || vim_operator == i || vim_operator == cs",
    "bindings": {
      "q": "vim::MiniQuotes",
      "b": "vim::MiniBrackets"
    }
  },
  {
    "context": "Editor && !agent_diff",
    "bindings": {
      "ctrl-alt-y": "workspace::CloseAllDocks" // default git::ToggleStaged
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-t": null
    }
  }
]
