{
  // Miscellaneous Settings
  "ssh_connections": [
    {
      "host": "android",
      "projects": [
        { "paths": ["/data/data/com.termux/files"] },
        { "paths": ["/data/data/com.termux/files/home"] }
      ]
    }
  ],

  // Editor Behavior
  "vim_mode": true,
  "vim": { "use_smartcase_find": true },
  "load_direnv": "shell_hook",
  "restore_on_startup": "none",

  "languages": {
    "JSON": {
      "format_on_save": {
        "external": {
          "command": "npx",
          "arguments": [
            "prettier",
            "--ignore-unknown",
            "--stdin-filepath",
            "{buffer_path}"
          ]
        }
      }
    },
    "TSX": {
      "format_on_save": {
        "external": {
          "command": "npx",
          "arguments": [
            "prettier",
            "--ignore-unknown",
            "--stdin-filepath",
            "{buffer_path}"
          ]
        }
      }
    },
    "TypeScript": {
      "format_on_save": {
        "external": {
          "command": "npx",
          "arguments": [
            "prettier",
            "--ignore-unknown",
            "--stdin-filepath",
            "{buffer_path}"
          ]
        }
      }
    },
    "JavaScript": {
      "format_on_save": {
        "external": {
          "command": "npx",
          "arguments": [
            "prettier",
            "--ignore-unknown",
            "--stdin-filepath",
            "{buffer_path}"
          ]
        }
      }
    },
    "Shell Script": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "shfmt"
        }
      }
    },
    "Python": {
      "language_servers": ["pyright", "pylsp", "ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "language_server": {
            "name": "ruff"
          }
        },
        {
          "code_actions": {
            "source.fixAll.ruff": true,
            "source.organizeImports.ruff": true
          }
        }
      ]
    }
  },

  // UI & Visual Settings
  "ui_font_size": 15,
  "buffer_font_size": 15,
  "ui_font_family": "FiraCode Nerd Font",
  "buffer_font_family": "FiraCode Nerd Font",
  "buffer_font_features": { "calt": true },
  "indent_guides": { "enabled": true, "coloring": "indent_aware" },
  "theme": {
    "mode": "system",
    "light": "Gruvbox Light",
    "dark": "Gruvbox Dark"
  },

  "edit_predictions": { "mode": "eager" },

  // Terminal Configuration
  "terminal": {
    "font_family": "FiraCode Nerd Font",
    "font_size": 15,
    "line_height": "standard",
    "env": {
      "EDITOR": "zed --wait",
      "VISUAL": "zed --wait"
    }
  },

  // Panel Configuration
  "notification_panel": { "dock": "left" },
  "chat_panel": { "dock": "left" },

  // AI & Integration Features
  "features": { "edit_prediction_provider": "supermaven" },
  "agent": {
    "enabled": false,
    "dock": "left"
  }
}
