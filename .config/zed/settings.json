{
  // Miscellaneous Settings
  "ssh_connections": [
    {
      "host": "android",
      "projects": [
        { "paths": ["/data/data/com.termux/files"] },
        { "paths": ["/data/data/com.termux/files/home"] }
      ]
    }
  ],

  // Editor Behavior
  "vim_mode": true,
  "vim": { "use_smartcase_find": true },
  "load_direnv": "shell_hook",
  "restore_on_startup": "none",

  "languages": {
    "TypeScript": {
      "format_on_save": {
        "external": {
          "command": "npx",
          "arguments": [
            "prettier",
            "--ignore-unknown",
            "--stdin-filepath",
            "{buffer_path}"
          ]
        }
      }
    },
    "JavaScript": {
      "format_on_save": {
        "external": {
          "command": "npx",
          "arguments": [
            "prettier",
            "--ignore-unknown",
            "--stdin-filepath",
            "{buffer_path}"
          ]
        }
      }
    }
  },

  // UI & Visual Settings
  "ui_font_size": 15,
  "buffer_font_size": 15,
  "ui_font_family": "FiraCode Nerd Font",
  "buffer_font_family": "FiraCode Nerd Font",
  "indent_guides": { "enabled": true, "coloring": "indent_aware" },
  "theme": {
    "mode": "system",
    "light": "Gruvbox Light",
    "dark": "Gruvbox Dark"
  },

  "edit_predictions": { "mode": "eager" },

  // Terminal Configuration
  "terminal": {
    "font_family": "FiraCode Nerd Font",
    "font_size": 15,
    "line_height": "standard",
    "env": {
      "EDITOR": "zed --wait",
      "VISUAL": "zed --wait"
    }
  },

  // Panel Configuration
  "notification_panel": { "dock": "left" },
  "chat_panel": { "dock": "left" },

  // AI & Integration Features
  "features": { "edit_prediction_provider": "supermaven" },
  "agent": { "enabled": false }
}
